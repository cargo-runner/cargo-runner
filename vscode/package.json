{
    "name": "cargo-runner",
    "displayName": "Cargo Runner",
    "description": "10X Rust Developer Tool to Run, Build, or Test without Mental Overhead",
    "publisher": "masterustacean",
    "icon": "images/icon.png",
    "author": "Microsoft Corporation",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/codeitlikemiley/cargo-runner"
    },
    "version": "2.0.0",
    "categories": [
        "Other"
    ],
    "keywords": [
        "cargo",
        "cargo Runner",
        "command runner",
        "rust"
    ],
    "engines": {
        "vscode": "^1.94.0"
    },
    "main": "./out/extension",
    "browser": "./dist/web/extension",
    "activationEvents": [],
    "contributes": {
        "taskDefinitions": [
            {
                "type": "cargo-runner",
                "required": [
                    "command",
                    "title"
                ],
                "properties": {
                    "command": {
                        "type": "string",
                        "description": "The cargo command to execute."
                    },
                    "title": {
                        "type": "string",
                        "description": "The title of the task."
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "cargo-runner.exec",
                "title": "Cargo Runner"
            },
            {
                "command": "cargo-runner.addArgs",
                "title": "Add Cargo Runner Args"
            }
        ],
        "keybindings": [
            {
                "command": "cargo-runner.exec",
                "key": "ctrl+r",
                "mac": "cmd+r",
                "when": "resourceFilename =~ /\\.(rs)$/ && editorTextFocus && editorLangId == rust && editorHasDefinitionProvider"
            },
            {
                "command": "cargo-runner.addArgs",
                "key": "ctrl+shift+r",
                "mac": "cmd+shift+r",
                "when": "editorTextFocus && editorLangId == rust"
            }
        ]
    },
    "scripts": {
        "package": "vsce package",
        "publish": "vsce publish",
        "build": "npm run wit-bindgen && npm run wit && npm run compile && cargo build --target wasm32-unknown-unknown && npm run esbuild",
        "wit-bindgen": "wit-bindgen rust --out-dir ./src ./wit",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "lint": "eslint ./src --ext .ts,.tsx",
        "wit": "wit2ts --outDir ./src ./wit",
        "esbuild": "node ./bin/esbuild.js",
        "serve": "serve --cors -l 8888 --ssl-cert $HOME/certs/localhost.pem --ssl-key $HOME/certs/localhost-key.pem"
    },
    "dependencies": {
        "@vscode/wasm-component-model": "1.0.1"
    },
    "devDependencies": {
        "@types/vscode": "^1.94.0",
        "@types/node": "^22",
        "@typescript-eslint/eslint-plugin": "^8.12.0",
        "@typescript-eslint/parser": "^8.12.0",
        "eslint": "^9.13.0",
        "typescript": "^5.6.3",
        "esbuild": "^0.24.0",
        "serve": "^14.2.1"
    }
    
}