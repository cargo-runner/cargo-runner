{
  "package": "project-a",
  "overrides": [
    {
      "match": {
        "package": "project-a",
        "function_name": "User::new"
      },
      "extra_args": ["--quiet", "--color=always"],
      "extra_test_binary_args": ["--nocapture", "--show-output"],
      "env": {
        "RUST_LOG": "debug",
        "RUST_BACKTRACE": "1"
      }
    },
    {
      "match": {
        "function_name": "User"
      },
      "extra_args": ["--quiet"],
      "extra_test_binary_args": ["--nocapture"]
    },
    {
      "match": {
        "module_path": "tests"
      },
      "extra_args": ["--nocapture"],
      "extra_test_binary_args": ["--test-threads=1"]
    }
  ]
}