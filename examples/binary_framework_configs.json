// Example configurations for binary_framework with the new nested structure
// Dioxus configuration
{
  "cargo": {
    "binary_framework": {
      "command": "dx",
      "subcommand": "serve",
      "extra_args": [
        "--hot-reload",
        "--port",
        "3000"
      ],
      "extra_env": {
        "RUST_LOG": "debug"
      }
    }
  }
}
// Leptos configuration
{
  "cargo": {
    "binary_framework": {
      "command": "cargo",
      "subcommand": "leptos watch",
      "extra_args": [
        "--hot-reload"
      ],
      "extra_env": {
        "LEPTOS_OUTPUT_NAME": "app"
      }
    }
  }
}
// Trunk configuration
{
  "cargo": {
    "binary_framework": {
      "command": "trunk",
      "subcommand": "serve",
      "extra_args": [
        "--open"
      ],
      "extra_env": {
        "TRUNK_SERVE_PORT": "8080"
      }
    }
  }
}
// Standard cargo with custom settings
{
  "cargo": {
    "binary_framework": {
      "command": "cargo",
      "channel": "nightly",
      "subcommand": "run",
      "extra_args": [
        "--release"
      ],
      "extra_env": {
        "RUST_BACKTRACE": "1"
      }
    }
  }
}
// Combined configuration with both cargo and rustc settings
{
  "cargo": {
    "features": "all",
    "extra_args": [
      "--verbose"
    ],
    "binary_framework": {
      "command": "cargo",
      "subcommand": "run",
      "channel": "nightly"
    }
  },
  "rustc": {
    "extra_args": [
      "--edition=2021",
      "-O"
    ]
  }
}