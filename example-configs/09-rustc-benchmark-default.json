{
  "rustc": {
    "binary_framework": {
      "build": {
        "command": "rustc",
        "args": ["--crate-type", "bin", "--crate-name", "{crate_name}", "{source_file}", "-o", "{output_name}"],
        "extra_args": ["--edition", "2021", "-O"]
      },
      "exec": {
        "command": "./{output_name}"
      }
    },
    "test_framework": {
      "build": {
        "command": "rustc",
        "args": ["--test", "{source_file}", "-o", "{output_name}"],
        "extra_args": ["--edition", "2021", "--cfg", "test"]
      },
      "exec": {
        "command": "./{output_name}",
        "args": ["{test_name}"],
        "extra_args": ["--no-capture"]
      }
    },
    "benchmark_framework": {
      "build": {
        "command": "rustc",
        "args": ["+nightly", "--test", "{source_file}", "-o", "{output_name}"],
        "extra_args": []
      },
      "exec": {
        "command": "./{output_name}",
        "args": ["--bench", "{bench_name}"]
      }
    }
  }
}